@model InjectionApple.Models.EmployeesViewModel
@{
    ViewBag.Title = "Sql Injection Page";
}

<div class="jumbotron">
    <h1>Sql Injection Vulnerabilities</h1>
</div>

<h2>Employees</h2>
<div class="row">
    <div class="col-md-8">
        <section>
            @using (Html.BeginForm("Employees", "Home", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Get, new {@class = "form-horizontal", role = "form"}))
            {
                <h4>Search for employees by name</h4>
                <hr/>
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                <div class="form-group">
                    @Html.LabelFor(m => m.EmployeeName, new {@class = "col-md-2 control-label"})
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.EmployeeName, new {@class = "form-control"})
                        @Html.ValidationMessageFor(m => m.EmployeeName, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Search" class="btn btn-default"/>
                    </div>
                </div>
            }
        </section>
    </div>
    <div class="col-md-4">
        <section>
            <h4>Search Results</h4>
            <hr/>
            <ul>
                @if (Model?.Employees != null) { 
                    foreach (var employee in Model.Employees)
                    {
                        <li><a>@employee.FirstName @employee.LastName</a></li>
                    }
                }
            </ul>
        </section>
    </div>
</div>